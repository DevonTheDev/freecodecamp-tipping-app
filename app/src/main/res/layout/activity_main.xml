<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumberDecimal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:editable="false"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/label_tip3"
        app:layout_constraintTop_toBottomOf="@+id/sb_tip" />

    <EditText
        android:id="@+id/label_tip3"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Total:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/label_bill"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Bill:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_tip"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/label_tip"
        android:layout_width="93dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tip:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/sb_tip"
        android:layout_width="211dp"
        android:layout_height="43dp"
        android:layout_marginTop="1dp"
        android:max="100"
        app:layout_constraintStart_toEndOf="@+id/tv_tip"
        app:layout_constraintTop_toBottomOf="@+id/num_billamount" />

    <EditText
        android:id="@+id/num_billamount"
        android:layout_width="212dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:ems="8"
        android:hint="Bill Amount"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/label_bill"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contextClickable="false"
        android:editable="false"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/label_tip"
        app:layout_constraintTop_toBottomOf="@+id/sb_tip" />
</androidx.constraintlayout.widget.ConstraintLayout>